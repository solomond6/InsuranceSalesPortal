<div class="col-md-3 col-lg-3">
    <div class="collapse navbar-collapse" id="navcol-1">
        <h4>Means of Identification</h4>
        <img alt="User means of identification" src="~/Assets/img/imgplaceholder.png" class="img-responsive">
        
        @{
            if (User.Identity.IsAuthenticated)
            {
                <h4>@(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</h4>
            }
            else
            {
                <h4>Name of User</h4>
            }
        }
        <ul class="nav-pills nav-stacked side-menu">
            <li role="presentation"><a href="~/users/profile">My Profile</a></li>
            <li role="presentation"><a href="~/users/claims">Claims</a></li>
            <li role="presentation"><a href="~/users/createclaim">Make A Claim</a></li>
            <!--<li role="presentation">Log Out</li>-->
        </ul>
    </div>
</div>

